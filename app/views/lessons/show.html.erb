<div class="container">
		<h1 class="mt-3"><em><%= @category.title %></em></h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-6 offset-lg-3">
			<div class="jumbotron p-3">
				<div class="row">
					<div class="col-lg-6">
						<h2>Result</h2>
					</div>
					<div class="col-lg-6">
						<h3 class="text-right"><%= "#{@score} / #{@words}" %></h3>
					</div>
				</div>

				<table class="ml-auto mr-auto" border="1">
					<thead>
						<tr>
							<th  class="text-center p-2"><b>Word</b></th>
							<th  class="text-center p-2"><b>Answer</b></th>
							<th  class="text-center p-2"><b>Correct</b></th>
						</tr>
					</thead>
					<tbody>
						<% @answers.each do |answer| %>
						<tr>
							<td class="p-1"><%= answer.result_word(answer.word_id).word %></td>
							<td class="p-1"><%= answer.result_choice(answer.choice_id).choice %></td>
							<td class="p-1">
								<% if answer.result_choice(answer.choice_id).correct == true %>
									<%= "○" %>
								<% else %>
									<%= "×" %>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
				
			</div>
			
		</div>
	</div>
				
</div>