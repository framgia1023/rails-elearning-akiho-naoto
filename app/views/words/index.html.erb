<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<h2 class="mt-3"><em>Dashboard</em></h2>
				<div class="media mt-3">
					<div class="row">
						<div class="col-lg-6">
							<% if current_user.picture? %>
								<div class="avatar_picture">
									<%= image_tag current_user.picture.url %>
								</div>
							<% else %>
								<div class="avatar_picture">
									<%= image_tag "/images/no_image-1.png", alt: "no images" %>
								</div>
							<% end %>	
						</div>
						<div class="col-lg-6">
							 <div class="media-body">
							    <h5 class="mt-0"><%= current_user.name %></h5>
							    <%= link_to "Learned #{pluralize(learned_words.count, "word")}", user_words_path(user_id: current_user) %>
							 </div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="container">
					<div class="card mt-3">
						<div class="card-header">Words Learned</div>
						<div class="card-body">
								<div class="row">
									<div class="col-lg-6 offset-lg-3">
										<table class="ml-auto mr-auto">
											<thead>
												<tr>
													<th class="p-3">Word</th>
													<th class="p-3">Answer</th>
												</tr>
											</thead>
											<tbody>
											<% learned_words.each do |answer| %>
												<tr>
													<td class="p-3"><%= answer.word.word %></td>
													<td class="p-3"><%= answer.choice.choice %></td>
												</tr>
											<% end %>
											</tbody>
										</table>
									</div>
								</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>