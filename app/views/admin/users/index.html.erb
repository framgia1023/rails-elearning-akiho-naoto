<div class="container">
	<h1>Manage Users</h1>
	<div class="row">
		<div class="col-lg-6 offset-3">
			<div class="media mt-3 mb-3">
				<div class="align-self-center">
					<div class="row">
						<% @users.each do |user| %>
							<div class="col-lg-6 mt-3">
								<h2><%= link_to user.name, user_path(user) %></h2>
							</div>
							<div class="col-lg-3 mt-3">
								<% if !current_user?(user) %>
									<%= link_to "Delete", admin_user_path(user), method: :delete, class: "btn btn-danger" %>
								<% end %>
							</div>
							<div class="col-lg-3 mt-3">
								<% if !user.admin? && !current_user?(user) %>
									<%= link_to "Add Admin", admin_user_path(user), method: :patch, class: "btn btn-success" %>
								<% else %>
									<% if !current_user?(user) %>
									<%= link_to "Remove Admin", admin_user_path(user), method: :patch, class: "btn btn-danger" %>
									<% end %>
								<% end %>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container paginate text-center">
		<%= will_paginate %>
	</div>
</div>