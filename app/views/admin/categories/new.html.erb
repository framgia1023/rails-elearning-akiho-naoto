<div class="container">
	<div class="row">
	<div class="col-lg-6">
		<h1 class="mt-3"><em>Manage Categories</em></h1>
	</div>
	<div class="col-lg-6">
		<%= link_to "Back", admin_categories_path, class: "btn btn-outline-secondary float-right mt-3" %>
	</div>	
	</div>
</div>

<div class="container">
	<div class="col-lg-8 offset-lg-2">
		<%= form_for @category do |f| %>
		
			<div class="form-group">
			<%= f.label "Title" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Enter title of new category" %>		
			</div>

			<div class="form-group">
				<%= f.label "Description" %>
				<br>
				<%= f.text_area :discription, class: "form-control", placeholder: "Enter discription new category", "rows" => 5 %>			
			</div>
		
			<div class="form-group">
				<%= f.submit "Create Category", class: "btn btn-outline-secondary btn-block" %>			
			</div>
	
		<% end %>
	</div>	
</div>