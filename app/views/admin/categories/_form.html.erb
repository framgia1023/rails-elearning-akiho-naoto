<div class="container">
	<div class="col-lg-8 offset-lg-2">
		<%= form_for ([:admin, @category]) do |f| %>
  		<%= render "shared/error_messages", object: f.object %>
		
			<div class="form-group">
			<%= f.label "Title" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Enter title of new category" %>		
			</div>

			<div class="form-group">
				<%= f.label "Description" %>
				<br>
				<%= f.text_area :description, class: "form-control", placeholder: "Enter discription new category", "rows" => 5 %>			
			</div>
		
			<div class="form-group">
				<%= f.submit btn_message, class: "btn #{btn_color} btn-block" %>			
			</div>
	
		<% end %>
	</div>	
</div>