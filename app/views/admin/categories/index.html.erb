<div class="container">
	<div class="row">
	<div class="col-lg-6">
		<h1 class="mt-3"><em>Manage Categories</em></h1>
	</div>
	<div class="col-lg-6">
		<%= link_to "Create New Category", new_admin_category_path, class: "btn btn-secondary float-right mt-3" %>
	</div>	
</div>
	
</div>



<div class="container">
	<table class="category-table table table-bordered">
	<thead>
		<tr class="text-center">
			<th class="col-lg-3">Title</th>
			<th class="col-lg-3">Description</th>
			<th class="col-lg-3">Action</th>
		</tr>
	</thead>
	<tbody>
			<% @categories.each do |category| %>
				<tr>
					<td><%= link_to category.title, admin_category_words_path(category.id) %></td>
					<td class="long-content"><%= category.description %></td>
					<td class="text-center"><%= link_to "Add idiom", new_admin_category_word_path(category_id: category) %> | <%= link_to "Edit", edit_admin_category_path(category) %> | <%= link_to "Delete", admin_category_path(category),method: :delete %></td>
				</tr>
			<% end %>
	</tbody>
</table>
	<div class="container paginate text-center">
		<%= will_paginate %>
	</div>
	
</div>
