<div class="container">
	<div class="row">
	<div class="col-lg-6">
		<h1 class="mt-3"><em><%= @category.title %></em></h1>
	</div>
	<div class="col-lg-6">
		<%= link_to "Back", admin_categories_path, class: "btn btn-outline-secondary float-right mt-3 ml-3" %>
		<%= link_to "Add idiom", new_admin_category_word_path(category_id: @category), class: "btn btn-outline-secondary float-right mt-3" %>
	</div>	
	</div>
	<table class="category-table table table-bordered">
	<thead>
		<tr class="text-center">
			<th class="col-lg-3">Word</th>
			<th class="col-lg-3">Answer</th>
			<th class="col-lg-3">Action</th>
		</tr>
	</thead>
	<tbody>
			<% @words.each do |word| %>
				<tr>
					<td class="long-content"><%= word.word %></td>
					<td><%= word.choices.find_by(correct: true).choice %></td>
					<td class="text-center"><%= link_to "Edit", edit_admin_category_word_path(category_id: @category, id: word) %> | <%= link_to "Delete", admin_category_word_path(category_id: @category, id: word), method: :delete %></td>
				</tr>
			<% end %>
	</tbody>
</table>
</div>

