<div class="container">
	<div class="row">
	<div class="col-lg-6">
		<h1 class="mt-3"><em><%= @category.title %></em></h1>
	</div>
	<div class="col-lg-6">
		<%= link_to "Back", admin_categories_path, class: "btn btn-outline-secondary float-right mt-3" %>
	</div>	
	</div>
</div>

<div class="container">
	<div class="col-lg-8 offset-lg-2">
		<%= form_for ([:admin, :category, @word]) do |f| %>
  		<%= render "shared/error_messages", object: f.object %>
  		<div class="row">
  			<div class="col-lg-6">
				<div class="form-group">
				<%= f.label "Word" %>
				<%= f.text_field :word, class: "form-control", placeholder: "Enter new word" %>		
				</div>	
			</div>
			
			<div class="col-lg-6">
				<%= f.fields_for :choices do |c| %>
				<div class="row">
					<div class="form-group col-lg-10">
						<%= c.label "Choice" %>
						<%= c.text_field :choice, class: "form-control", placeholder: "Enter choice of the word" %>
					</div>
					<div class="form-group col-lg-2">
						<%= c.label "Correct" %>
						<%= c.check_box :correct, class: "form-control form-check" %>
					</div>
				</div>
				<% end %>
			</div>
  			
  		</div>
			
			
			<div class="form-group">
				<%= f.submit "Add", class: "btn btn-outline-secondary btn-block" %>			
			</div>
	
		<% end %>
	</div>	
</div>