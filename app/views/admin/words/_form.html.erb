<div class="container">
	<div class="col-lg-8 offset-lg-2">
		<%= form_for ([:admin, :category, @word]) do |f| %>
	  		<%= render "shared/error_messages", object: f.object %>
	  		<div class="row">
	  			<div class="col-lg-6 offset-lg-3">
		  			<div class="form-group">
						<%= f.label "Word" %>
						<%= f.text_field :word, class: "form-control", placeholder: "Enter new word" %>
					</div>
					<div class="row">
						<%= f.fields_for :choices do |c| %>
							<div class="form-group col-lg-9">
							  <%= c.label "Choice" %>
							   <%= c.text_field :choice, class: "form-control", placeholder: "Enter your first choice" %>
							</div>
							<div class="form-group col-lg-3">
							  <%= c.label "Correct" %>
							   <%= c.check_box :correct, class: "form-check" %>
							</div>
						<% end %>
					</div>
				</div>
			</div>
			<div class="form-group mt-3">
				<%= f.submit btn_message, class: "btn #{btn_color} btn-block" %>			
			</div>
		<% end %>
	</div>
</div>