<div class="container">
	<div class="jumbotron mt-3">
		<div class="row">
			<div class="col-lg-6">
				<h1 class="text-white">Users List</h1>
			</div>
			<div class="col-lg-6">
				<%= form_tag users_path, method: :get, class: "form-inline my-2 my-rg-0 float-right" do %>
					<%= text_field_tag :search, nil, class: "form-control mr-sm-2", placeholder: "Search" %>
					<%= submit_tag "Search", class: "btn btn-primary my-2 my-sm-0" %>
			<!-- 	 <form class="form-inline my-2 my-lg-0">
			      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
			      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			    </form> -->
			    <% end %>
		    </div>
	    </div>
	    <% if @users.empty? %>
	    <div class="row">
			<div class="col-lg-6 offset-3">
	    	<h1 class="text-center">No User</h1>
	    	</div>
	    </div>
	    <% else %>
		<div class="row">
			<div class="col-lg-6 offset-3">
				<div class="media mt-3 mb-3">
					<div class="align-self-center">
						<div class="row">
							<% @users.each do |user| %>
								<div class="col-lg-3 mt-3">
									<% if user.picture? %>
										<div class="avatar_picture">
										<%= image_tag user.picture.url %>
										</div>
									<% else %>
										<div class="avatar_picture">
											<%= image_tag "/images/no_image-1.png", alt: "no images" %>
										</div>
									<% end %>
								</div>
								<div class="col-lg-9 mt-5">
									<h2><%= link_to user.name, user_path(user), class: "link-white" %></h2>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container paginate text-center mt-2">
			<%= will_paginate %>
		</div>
		<% end %>
	</div>
</div>