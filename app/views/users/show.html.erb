<div class="container">
	<h1>User Profile</h1>
	<div class="row">
		<div class="col-lg-4">
			<div class="container">
				<div class="card mb-2">
					<div class="card-body">
						<div class="text-center">
							<% if @user.picture? %>
							<div class="avatar_picture">
								<%= image_tag @user.picture.url %>
							</div>
							<% else %>
								<div class="avatar_picture">
									<%= image_tag "/images/no_image-1.png", alt: "no images" %>
								</div>
							<% end %>
						</div>
						<div class="text-center">
							<h2><%= @user.name %></h2>
						</div>
						<% unless current_user?(@user) %>
						<div id="follow_form">
							<% if current_user.following?(@user) %>
							<%= render "unfollow", user: @user %>
							<% else %>
							<%= render "follow", user: @user %>
							<% end %>
						</div>
						<% end %>
						<div class="text-center">
							<div class="row">
							<div class="col-lg-6">
								<h5>Following</h5>
								<h3><span class="badge badge-primary" id="following"><%= @user.following.count %></span></h3>
							</div>
							<div class="col-lg-6">
								<h5>Followers</h5>
								<h3><span class="badge badge-primary" id="followers"><%= @user.followers.count %></span></h3>
							</div>
							</div>	
						</div>
					</div>
				</div>
				<% if current_user?(@user) %>
					<%= link_to "Edit Profile", edit_user_path, class: "btn btn-outline-primary btn-block" %>
				<% end %>
			</div>
		</div>
		<div class="col-lg-8">
			<div class="contaner">
				<div class="card">
					<h2>Here is activity area</h2>
					<ul>
						<li>This is an activity</li>
						<li>This is an activity</li>
						<li>This is an activity</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>