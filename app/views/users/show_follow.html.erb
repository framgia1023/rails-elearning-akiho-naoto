<div class="container">
	<h1>This is <%= @title %> show page</h1>
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<div class="container">
				<div class="card mb-2">
					<div class="card-body">
						<div class="text-center">
							<% if @user.picture? %>
							<div class="avatar_picture">
								<%= image_tag @user.picture.url %>
							</div>
							<% else %>
								<div class="avatar_picture">
									<%= image_tag "/images/no_image-1.png", alt: "no images" %>
								</div>
							<% end %>
						</div>
						<div class="text-center">
							<h2><%= @user.name %></h2>
							<% unless current_user?(@user) %>
								<div id="follow_form">
									<% if current_user.following?(@user) %>
									<%= render "unfollow", user: @user %>
									<% else %>
									<%= render "follow", user: @user %>
									<% end %>
								</div>
							<% end %>
						</div>
						<div class="text-center">
							<div class="row">
							<div class="col-lg-6">
								<h5>Following</h5>
								<h3><span class="badge badge-primary" id="following"><%= link_to @user.following.count, following_user_path(@user), id: "following", class: "text-white" %></span></h3>
							</div>
							<div class="col-lg-6">
								<h5>Followers</h5>
								<h3><span class="badge badge-primary" id="followers"><%= link_to @user.followers.count, followers_user_path(@user), id: "follower", class: "text-white" %></span></h3>
							</div>
							</div>	
						</div>		
					</div>
				</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="card">
					<div class="card-header"><%= @title %> Users' List</div>
					<div class="card-body">
						<% @users.each do |user| %>
							<div class="row mt-3">
								<div class="col-lg-2">
									<div class="text-center">
										<% if @user.picture? %>
											<div class="avatar_picture">
												<%= image_tag @user.picture.url %>
											</div>
										<% else %>
											<div class="avatar_picture">
												<%= image_tag "/images/no_image-1.png", alt: "no images" %>
											</div>
										<% end %>
									</div>
								</div>
								<div class="col-lg-10">
									<%= link_to user.name, user_path(user) %>
								</div>								
							</div>
							<hr>
						<% end %>
						<div class="container paginate text-center">
							<%= will_paginate %>	
						</div>
					</div>
				</div>	
			</div>
		</div>
	</div>		
</div>
